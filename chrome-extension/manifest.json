{
  "manifest_version": 2,
  "name": "Emoji Autocomplete",
  "version": "0.1",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "js/jquery-3.1.1.min.js",
      "js/q.js",
      "js/LargeLocalStorage.min.js",
      "js/sql.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery-3.1.1.min.js",
        "js/jquery.caret.min.js",
        "js/utils.js",
        "js/editable.js",
        "js/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "commands": {
    "emoji-auto-complete": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Search for Emojis"
    }
  },
  "web_accessible_resources": [
    "database/*",
    "html/*",
    "template/*"
  ],
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
